{
    "manifest_version": 3,
    "name": "Indian Language Translator",
    "version": "1.0",
    "description": "Translate web pages into different regional Indian languages.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": ["activeTab"]
  }
  